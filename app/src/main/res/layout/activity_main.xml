<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.stang.customview.MainActivity">

    <com.stang.customview.RectAnimationView
            android:id="@+id/v1"
            android:layout_marginBottom="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:layout_gravity="center"
            custom:rav_line_color="@android:color/holo_green_dark"
            custom:rav_line_width="3px"
            custom:rav_speed_animation="1.40"
            custom:rav_dot_figure="circle"
            custom:rav_dot_color="@android:color/holo_blue_light"
            custom:rav_dot_width="20px"
            custom:rav_repeat_counts="0"
            custom:rav_direction="round"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"    >

    <com.stang.customview.RectAnimationView
        android:id="@+id/v2"
        android:layout_marginTop="0dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_gravity="center"
        custom:rav_line_color="@android:color/holo_blue_light"
        custom:rav_line_width="1px"
        custom:rav_speed_animation="1.00"
        custom:rav_dot_figure="rectangle"
        custom:rav_dot_color="@android:color/holo_orange_dark"
        custom:rav_dot_width="10px"
        custom:rav_repeat_counts="1"
        custom:rav_direction="round"
        />


</LinearLayout>


    <com.stang.customview.RectAnimationView
            android:id="@+id/v3"
            android:layout_marginTop="20dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:padding="10dp"
            custom:rav_line_color="@android:color/holo_orange_light"
            custom:rav_line_width="20px"
            custom:rav_speed_animation="2.1"
            custom:rav_dot_figure="image"
            custom:rav_dot_color="@android:color/holo_red_dark"
            custom:rav_dot_width="35px"
            custom:rav_repeat_counts="-1"
            custom:rav_direction="round"
            />
    

<TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Custom Views" />
</LinearLayout>
